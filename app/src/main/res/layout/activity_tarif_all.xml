<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.aplikasi3minibus.TarifAllActivity"
    android:background="#fffdff62">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tarif"
        android:id="@+id/textView21"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Pilih Penyedia Layanan Minibus"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cv. samudra Tour"
        android:id="@+id/button3"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onTombolSamudra" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cv. mandala tour"
        android:id="@+id/button7"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginTop="30dp"
        android:onClick="onTombolMandala" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cv. mentari tour"
        android:id="@+id/button9"
        android:layout_below="@+id/button7"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:layout_marginTop="30dp"
        android:onClick="onTombolMentari" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kembali"
        android:id="@+id/button10"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/button9"
        android:background="#ffff7135"
        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:textColor="#ffff"
        android:onClick="onTombolKmbl" />
</RelativeLayout>
