<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.aplikasi3minibus.Jadwal"
    android:background="#fffdff62">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aplikasi Minibus"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="JADWAL"
        android:id="@+id/textView7"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Silahkan Pilih Penyedia Layanan Minibus"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CV. Samudra Tour"
        android:id="@+id/btnSamudra"
        android:onClick="onButtonSamudra"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CV. Mandala Tour"
        android:id="@+id/btnMandala"
        android:onClick="onButtonMandala"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/btnSamudra"
        android:layout_alignLeft="@+id/btnSamudra"
        android:layout_alignStart="@+id/btnSamudra" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CV. MENTARI TOUR"
        android:id="@+id/btnMentari"
        android:layout_marginTop="35dp"
        android:onClick="onButtonMentari"
        android:layout_below="@+id/btnMandala"
        android:layout_alignLeft="@+id/btnMandala"
        android:layout_alignStart="@+id/btnMandala" />

    <Button
        style="@android:style/Holo.Light.SegmentedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:id="@+id/button8"
        android:layout_below="@+id/btnMentari"
        android:layout_alignLeft="@+id/btnMentari"
        android:layout_alignStart="@+id/btnMentari"
        android:layout_marginTop="39dp"
        android:textColor="#ffff"
        android:background="#ffff7135"
        android:layout_toStartOf="@+id/textView7"
        android:onClick="onButtonKembali2"
        android:layout_alignRight="@+id/btnMentari"
        android:layout_alignEnd="@+id/btnMentari" />

</RelativeLayout>